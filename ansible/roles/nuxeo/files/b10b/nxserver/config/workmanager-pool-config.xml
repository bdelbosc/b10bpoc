<?xml version="1.0"?>
<component name="b10b-workmanager-config">
  <require>org.nuxeo.ecm.platform.video.workmanager</require>

  <extension target="org.nuxeo.ecm.core.work.service" point="queues">
    <!-- make video conversion thread pool greater to one to scale on multi node -->
    <queue id="videoConversion">
      <maxThreads>4</maxThreads>
    </queue>

    <!-- create a dedicated pool for thumbnail -->
    <queue id="updateThumbListener">
      <maxThreads>4</maxThreads>
      <category>updateThumbListener</category>
    </queue>

  </extension>

</component>
